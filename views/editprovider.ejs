  <div class="">
    <div class="row">

        <div class="x_panel">

          <div class="x_content">

            <form class="form-horizontal form-label-left input_mask" novalidate action="/editprov/<%= providers._id %>" method="post">
            <div class="col-md-12 col-sm-12 col-xs-12">
              <span class="section">Modification Fournisseur</span>


              <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Raison sociale : <span class="required">*</span>
                  </label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" id="raisonsociale" name="raisonsociale" placeholder="Raison sociale" type="text" value="<%= providers.raisonsociale %>">
                  </div>
              </div>

              <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Téléphone : <span class="required">*</span>
                  </label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" id="telephone" name="telephone" placeholder="Téléphone" type="text" value="<%= providers.telephone %>" >
                  </div>
              </div>

              <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">fax : <span class="required">*</span>
                  </label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" id="fax" name="fax" placeholder="fax" type="text" value="<%= providers.fax %>">
                  </div>
              </div>

              <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Adresse Email : <span class="required">*</span>
                  </label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" id="mail" name="mail" placeholder="Adresse email" type="email" value="<%= providers.mail %>">
                  </div>
              </div>

              <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Adresse : <span class="required">*</span>
                  </label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" id="adresse" name="adresse" placeholder="Adresse" type="textarea" value="<%= providers.adresse %>">
                  </div>
              </div>

              <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Site Web : <span class="required">*</span>
                  </label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" id="site" name="site" placeholder="Site Web" type="text" value="<%= providers.site %>">
                  </div>
              </div>

              <div class="form-group">
                  <label class="control-label col-md-3 col-sm-3 col-xs-12">Autres informations : <span class="required">*</span>
                  </label>
                  <div class="col-md-6 col-sm-6 col-xs-12">
                    <input class="form-control col-md-7 col-xs-12" data-validate-length-range="6" data-validate-words="1" id="autre" name="autre" placeholder="Autres informations" type="text" value="<%= providers.autre %>">
                  </div>
              </div>

            </div>

                <div class="form-group" align="right">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <input type="hidden" name="_method" value="PUT">
                        <button id="send" type="submit" class="btn btn-primary">Enregistrer</button>
                        <button id="retour" type="button" class="btn btn-success" onclick="window.location.href='/listproviders'">Liste des fournisseurs</button>
                     </div>
                </div>
               
          </form>

        </div>
      </div>
